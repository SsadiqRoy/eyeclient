  body 
    section.form.form-9
      h3.form__heading.margin-b4 New Admin
      form#form-new-user
        .form-group
          label.label-basic(for="name") name
          input#name.input-basic(type="text", name="name", placeholder="name" required)
        .form-group
          label.label-basic(for="email") email
          input#email.input-basic(type="email", name="email", placeholder="email" required)
        .form-group
          label.label-basic(for="password") password
          input#password.input-basic(type="password", name="password", placeholder="password" required)
        .form-group
          label.label-basic(for="confirm-password") confirm password
          input#confirm-password.input-basic(type="password", name="confirm-password", placeholder="confirm password" required)
        .form-group
          label.label-basic(for="acces") acces code
          input#acces.input-basic(type="password", name="acces", placeholder="acces code" required)

        .btn-center
